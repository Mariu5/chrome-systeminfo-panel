{
    "name": "Widget",
    "description": "ChromeOS Desktop Widget",
    "manifest_version": 2,
    "version": "0.0.0.1",
    "minimum_chrome_version": "28",
    "offline_enabled": true,
	"background": {
		"scripts": ["js/background.js"]
	},
	"browser_action": {
		"default_icon": {
      		"19": "img/icon16.png",
      		"38": "img/icon128.png"
    	},
		"default_title": "System Info"
	},
    "permissions": [
        "alarms",
        "contextMenus",
//	    "experimental",
        "system.display",
        "system.memory",
		"system.storage",
        "system.cpu"
    ],
    "icons": { "16": "img/icon16.png", "128": "img/icon128.png" }
}